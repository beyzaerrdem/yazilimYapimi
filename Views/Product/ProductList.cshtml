@using yazilimYapimi.Models.Entity
@model List<tableProduct>
@{
    ViewBag.Title = "ProductList";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    //if(Session["UserID"] == null)
    //{
    //    Response.Redirect("~/Home/Login");
    //}
}

<h2>ProductList </h2>

<table class=" table table-bordered">
    <tr>
        <th>Product ID</th>
        <th>Product Name</th>
        <th>Price</th>
        <th>Quantity</th>
    </tr>

    <tbody>
        @foreach (var prdct in Model)
        {
            <tr>
                <th>@prdct.ID</th>
                <td>@prdct.ProductName</td>
                <td>@prdct.Price</td>
                <td>@prdct.Quantity</td>
            </tr>
        }
    </tbody>
</table>

@if (Session["UserID"] != null) //Kayıtlı değilse
{
<a href="/Product/NewProduct" class="btn btn-primary">ADD</a>
}
else
{
    
}


